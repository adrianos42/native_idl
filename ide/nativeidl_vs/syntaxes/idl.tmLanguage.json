{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "IdlNative",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"match": "\\b(enum|struct|interface|import|library|stream|type|const|static|dynamic|generic|is)\\b",
					"name": "keyword.control.idl"
				},
				{
					"match": "(?<!\\$)\\b(0x[0-9A-F]*)|([0-9]+\\.?[0-9]*)\\b(?!\\$)",
					"name": "constant.numeric.idl"
				},
				{
					"match": "(?<!\\$)\\b(?:bool|int|float|string|bytes|none|option|result|map|set|pair|uuid)\\b(?!\\$)",
					"name": "storage.type.primitive.idl"
				},
				{
					"match": "(?<!\\$)\\b(?:array_i8|array_u8|array_i16|array_u16|array_i32|array_u32|array_i64|array_u64|array_f16|array_f32)\\b(?!\\$)",
					"name": "storage.type.primitive.idl"
				},
				{
					"match": "(?<=^\\s{4})[A-Z](?:[a-z0-9][A-Z]?)+",
					"name": "constant.numeric.idl"
				},
				{
					"match": "[A-Z](?:[a-z0-9][A-Z]?)+(?=:)",
					"name": "constant.numeric.idl"
				},
				{
					"match": "(?<!\\$)[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}(?!\\$)",
					"name": "constant.numeric.idl"
				},
				{
					"match": "(?<!\\$)\\b([A-Z](?:[a-z0-9][A-Z]?)*)\\b(?!\\$)",
					"name": "entity.name.class.idl"
				},
				{
					"match": "(?<!\\$)\\b((?:[a-z]+[0-9]*)+(?:_[a-z0-9]+)*)\\b(?!\\$)",
					"name": "entity.name.function.idl"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.idl",
					"match": "(--).*$\n?"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.idl",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.idl",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.idl"
}